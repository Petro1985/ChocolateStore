@page "/SignUp"
@layout MainLayout
@inherits UserSignUpBase

<div class="container">
    <div class="mt-3"><h2>New user registraion</h2></div>
    <div class="mt-3"><h3>Enter your login and password:</h3></div>
    <div class="form-floating">
        <input @bind="UserInfo.userName" type="email" id="Login" class="form-control @InputsClass" style="max-width: 40rem" placeholder="Login"/>
        <label for="Login">Login</label>
    </div>

    <div class="form-floating mt-1">
        <input @bind="UserInfo.password" type="password" id="Password" class="form-control @InputsClass" style="max-width: 40rem" placeholder="Password"/>
        <label for="Password" style="font-size: large">Password</label>
    </div>
    <button @onclick="() => OnSignUpClick(UserInfo)" class="btn btn-lg mt-3 @ButtonClass" style="width: 10rem">Sign up</button>
    
</div>