@using ChocolateUI.Pages.Components
@using Models.Photo
@using Models.Product
@using System.Globalization
@inject IUserProfile UserProfile

<div class="container">
    <div class="row">
        <div class="col-xl-5 col-lg-6 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <img alt="main-photo" class="" style="max-width:100%;height:auto;" src="https://localhost:7213/image/@_currentPhoto" draggable="false"/>
                    </div>
                </div>
                <div class="row mt-3">
                    @foreach (var photo in Photos)
                    {
                        <div class="col-3 p-2 position-relative">
                            <a class="@(_currentPhoto == photo ? "selected" : "")" @onclick="() => SetCurrentPhoto(photo)">
                                <img
                                    draggable="false"
                                    alt="miniature-photo"
                                    style="max-width:100%;height:auto;"
                                    src="https://localhost:7213/image/@photo"/>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5 col-12 ms-xl-4 ms-lg-4 ms-0 mt-xl-0 mt-lg-0 mt-md-4">
            <h3>
                <p>Описание товара:</p>
            </h3>
            @Product.Description
            <h3 class="mt-4">
                <p>Цена: <b>@(Product.PriceRub.ToString("N2") + " руб.")</b></p>
            </h3>
        </div>
    </div>
</div>


